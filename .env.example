# ===============================================
# Potato Disease Detection - Environment Variables
# ===============================================
# Copy this file to .env and fill in your values

# Google Gemini API Key (Required for chatbot)
# Get your key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# TensorFlow Serving URL (Update for production)
TF_SERVING_URL=http://localhost:8501

# Backend API URL (Update for production)
BACKEND_API_URL=http://localhost:8000

# Environment Mode
ENVIRONMENT=development
# Options: development, staging, production

# CORS Settings (Allowed Origins)
# For production, specify your domain
ALLOWED_ORIGINS=http://localhost,http://localhost:3000,http://localhost:5500

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_WORKERS=4

# Logging
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Model Configuration
MODEL_NAME=potato
MODEL_VERSION=1
